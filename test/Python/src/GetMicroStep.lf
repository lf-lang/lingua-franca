// Tests the get_microstep() function in the python target.
target Python {
    fast: false
};
main reactor GetMicroStep {
    preamble {=
        import sys
    =}
    state s(1);

    // timer t(0, 1 msec);
    logical action l;
    reaction(startup) -> l {=
        l.schedule(0);
    =}

    reaction(l) -> l {=
        microstep = get_microstep()
        if microstep != self.s:
            self.sys.stderr.write(f"expected microstep {self.s}, got {microstep} instead\n")
            self.sys.exit(1)
        self.s += 1
        if self.s < 10:
            l.schedule(0)
    =}
}
