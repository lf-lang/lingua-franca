target Python;

reactor Source {
  output out

  logical action a

  reaction(startup) -> a {=
    a.schedule(MSEC(200), 42)
  =}

  reaction(a) -> out {=
    out.set(a.value)
  =}
}

reactor Print {
  input inp

  reaction(inp) {=
    print("Received ", inp.value)
    if inp.value != 42:
      print("ERROR: Expected value to be 42.\n")
      exit(1)
  =}
}

main reactor SetToken {
  s = new Source()
  p = new Print()
  s.out -> p.inp
}
