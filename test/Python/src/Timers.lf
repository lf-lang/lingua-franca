/** Test whether timers with different periods are triggered correctly. */
target Python {
  timeout: 2 sec
}

main reactor {
  timer t(0, 1 sec)
  timer t2(0, 2 sec)
  state counter = 0

  reaction(t2) {= self.counter += 2 =}

  reaction(t) {= self.counter -= 1 =}

  reaction(shutdown) {=
    if self.counter != 1:
      sys.stderr.write("Error: Expected {:d} and got {:d}.\n".format(1, self.counter))
      exit(1)
    print("SUCCESS.")
  =}
}
