// This tests the ability to import a reactor definition
// that itself imports a reactor definition.
target Python;
import ImportedComposition from "ImportedComposition.lf";

main reactor ImportComposition {
    a = new ImportedComposition();
    reaction(startup) -> a.x {=
        a.x.set(42) 
    =}
    reaction(a.y) {=
        receive_time = get_elapsed_logical_time()
        print("Received {:d} at time {:d}\n".format(a.y.value, receive_time))
        if receive_time != 55000000:
            sys.stderr.write("ERROR: Received time should have been 55,000,000.\n")
            exit(1)
        if a.y.value != 42 * 2 * 2:
            sys.stderr.write("ERROR: Received value should have been {:d}.\n".format(42 * 2 * 2))
            exit(2)
    =}
} 