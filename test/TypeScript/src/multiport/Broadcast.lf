target TypeScript;

reactor Source {
    output out:number;
    
    reaction (startup) -> out {=
        out = 42;
    =}
}

reactor Sink {
    input inp:number;
    
    reaction (inp) {=
        console.log("Received " + inp);
        if (inp != 42) {
            util.requestErrorStop("Error: expected " + 42);
        }
    =}
}

main reactor {
    source = new Source();
    sink = new[4] Sink();
    (source.out)+ -> sink.inp;
}
