// Source produces a dynamically allocated struct, which it passes to Print. Reference counting
// ensures that the struct is freed.
target TypeScript

reactor Source {
  preamble {=
    type hello_t =  {
      name: string ;
      value: number;
    }
  =}
  output out: hello_t

  reaction(startup) -> out {=
    let temp: hello_t = {name: "Earth", value: 42}
    out = temp;
  =}
}

// expected parameter is for testing.
reactor Print(expected: number = 42) {
  input x: hello_t

  reaction(x) {=
    x = x as hello_t;
    console.log("Received: name = " + x.name + ", value = " + x.value);
    if (x.value != expected) {
      util.requestErrorStop("ERROR: Expected value to be " + expected)
    }
  =}
}

main reactor StructPrint {
  s = new Source()
  p = new Print()
  s.out -> p.x
}
