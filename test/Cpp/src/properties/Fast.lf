target Cpp {
  fast: true
}

main reactor {
  logical action a

  state triggered: bool = false

  reaction(startup) -> a {= a.schedule(2s); =}

  reaction(a) {=
    triggered = true;
    if (get_elapsed_physical_time() >= 2s) {
      std::cout << "ERROR: needed more than 2s to process the reaction\n";
      exit(1);
    }
  =}

  reaction(shutdown) {=
    if (triggered) {
      std::cout << "SUCCESS!\n";
    } else {
      std::cout << "ERROR: reaction was not invoked!\n";
      exit(2);
    }
  =}
}
