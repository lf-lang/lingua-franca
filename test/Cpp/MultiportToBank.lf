target Cpp;

reactor Source {
    output[4] out:unsigned;
    
    reaction (startup) -> out {=
        for (unsigned i = 0 ; i < out.size(); i++) {
            out[i].set(i);
        }
    =}
}

reactor Sink(bank_position:unsigned(0)) {
    input in:unsigned;
    
    reaction (in) {=
        std::cout << "Received " << *in.get() << '\n';
        if (*in.get() != bank_position) {
            std::cerr << "Error: expected " << bank_position << "!\n";
            // exit(1);
        }
    =}
}

main reactor MultiportToBank {
    source = new Source();
    sink = new[4] Sink();
    source.out -> sink.in;
}