/** Test physical connections. */
target C;
reactor Source {
    output out:int;
    reaction(startup) -> out {=
        SET(out, 42);
    =}
}
reactor Destination {
    input in:int;
    reaction(in) {=
        interval_t time = get_elapsed_physical_time();
        printf("Received %d at logical time %lld.\n", in->value, time);
        if (time <= 0LL) {
            fprintf(stderr, "ERROR: Logical time should have been greater than zero.\n");
            exit(1);
        }
    =}
}
main reactor PhysicalConnection {
    source = new Source();
    destination = new Destination();
    source.out ~> destination.in; 
}