/**
 * Check that request_stop() doesn't cause 
 * any issues at the shutdown tag.
 * 
 * Original bug discovered by Steven Wong <housengw@berkeley.edu>
 * 
 * @author Steven Wong <housengw@berkeley.edu>
 */
target C {
    timeout: 2 sec
}

reactor A {
    input in:int;
    reaction(startup) {=
        info_print("Hello World!");
    =}
     
    reaction(in) {=
        info_print("Got it");
    =}
    
    reaction(shutdown) {=
        request_stop();
    =}
}

reactor B {
    output out:int;
    timer t(1 sec);
    reaction(t) -> out {=
        SET(out, 1);
    =}
    reaction(shutdown) {=
        request_stop();
    =}
}

federated reactor {
    a = new A();
    b = new B();
    b.out -> a.in;
}