// Tests that specified deadlines with zero duration are always violated.
target C {
  timeout: 1 sec
}

reactor Detector {
  input trigger: int
  state cnt: int = 0

  reaction(trigger) {=
    printf("ERROR: failed to detect zero-duration deadline at iteration %d.\n", self->cnt);
    exit(1);
  =} deadline(0 msec) {= self->cnt++; =}
}

reactor Generator {
  output pulse: int
  timer t(0, 100 msec)

  reaction(t) -> pulse {= lf_set(pulse, 0); =}
}

main reactor {
  g = new Generator()
  d = new Detector()
  g.pulse -> d.trigger
}
