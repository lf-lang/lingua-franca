target C {
  // To test generating a custom trace file name.
  tracing: {
    trace-file-name: "HelloWorldTrace"
  },
  logging: error,
  build-type: Debug
}

reactor HelloWorld2 {
  state success: bool = false

  reaction(startup) {=
    printf("Hello World.\n");
    self->success = true;
  =}

  reaction(shutdown) {=
    printf("Shutdown invoked.\n");
    if (!self->success) {
      fprintf(stderr, "ERROR: startup reaction not executed.\n");
      exit(1);
    }
  =}
}

main reactor HelloWorld {
  a = new HelloWorld2()
}
