/** Test that use-dependencies do not trigger reactions. */
target Rust

reactor Source {
  output clock: u32

  reaction(startup) -> clock {= ctx.set(clock, 0); =}
}

reactor Sink {
  input clock: u32
  input bogus: u32

  reaction(bogus) clock {= panic!("Should not be executed") =}

  reaction(shutdown) {= println!("Success") =}
}

main reactor {
  source = new Source()
  sink = new Sink()

  source.clock -> sink.clock
}
