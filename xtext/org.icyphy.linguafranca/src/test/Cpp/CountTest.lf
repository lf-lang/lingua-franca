target Cpp {
    timeout: 3 sec,
    fast: true
};
import Count.lf;
reactor Test {
    input c:int;
    state i:int(0);
    reaction(c) {=
        i++;
        if (*c.get() != i) {
            std::cerr << "ERROR: Expected " << i << " but got " << *c.get() << std::endl;
            exit(1);
        }
    =}
}
main reactor CountTest {
    count = new Count();
    test = new Test();
    count.c -> test.c;
}
